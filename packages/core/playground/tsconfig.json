{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["ES2022", "DOM"],
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "paths": {
      "~": ["../src"],
      "~play/*": ["./src/*"]
    },
    "strictNullChecks": true
  },
  "include": ["src/**/*", "../src/**/*"]
}
